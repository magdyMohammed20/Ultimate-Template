.settings.position-fixed.hide-settings.p-3.border-top
    .settings-gear.position-absolute.bg-white.text-center
        i.fas.fa-cog
    h4 Settings
    .color-settings.mt-4
        p.text-muted Select Color
        ul.list-unstyled.d-flex
            -var themes = ['flatGreen-back','flatBlue-back','flatRed-back','flatBlack-back','flatSpeechBlue-back','flatSunset-back','flatSpero-back']
            each val,index in themes
                if val == 'flatGreen-back'
                    li(data-theme= val class=val + ' active')
                else
                    li(data-theme= val class=val)
    .font-settings.my-4
            -var fonts = ['Archivo','Cairo','Saira','Viga']
            p.text-muted Select Font
            select.form-select.selectFont
                each val in fonts
                    option(value= val)= val + ' Font'
    .site-settings
        | Settings