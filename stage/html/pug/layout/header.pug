header.d-flex.justify-content-between
        button.toggle-btn.border-0.text-white.rounded-0
            i.fas.fa-bars
        .icons.d-flex.align-items-center

            .dropdown.mr-2
                .user(data-toggle='dropdown', aria-expanded='false').d-flex.align-items-center
                    img(src='https://img.icons8.com/dusk/2x/user-female-skin-type-1-2.png' alt='Img')
                    span.mx-2 Magdy Mohammed
                    i#user.dropdown-toggle.fas.fa-angle-down

                .dropdown-menu.dropdown-menu-right.p-0.overflow-hidden(aria-labelledby='user')
                    .user-data.p-3.text-white
                        h4 Magdy Mohammed
                        p.text-muted.m-0 Premium Member
                    
                    .user-activities.p-3
                        ul.list-unstyled
                            li.my-2 First Activity
                            li.my-2 First Activity
                            li.my-2 First Activity
                            li.my-2 First Activity
                    
                    .row.user-links.p-3.text-center
                        .col.settings 
                            button.btn.d-flex.align-items-center.w-100.text-white.justify-content-center
                                i.fas.fa-cog.mr-2
                                | Settings
                        .col.profile
                            button.btn.d-flex.align-items-center.w-100.text-white.justify-content-center
                                i.fas.fa-user-alt.mr-2
                                | Profile
                        .col.logout
                            button.btn.d-flex.align-items-center.w-100.text-white.justify-content-center
                                i.fas.fa-power-off.mr-2
                                | Log Out


            .dropdown.mr-2
                i#nots.dropdown-toggle.fas.fa-bell(data-toggle='dropdown', aria-expanded='false')
                .dropdown-menu.dropdown-menu-right.p-0(aria-labelledby='nots')
                    .not-head.d-flex.justify-content-between.align-items-center.p-3.text-white
                        span Notifications
                        .badge.bg-success.rounded-pill 50
                    .not-body.py-2.px-3
                        ul.list-unstyled
                            li.my-3
                                i.far.fa-envelope.mr-2
                                span You Have A Message From Someone
                            li.my-3
                                i.far.fa-thumbs-up.mr-2
                                span Someone Like Your Post
                            li.my-3
                                i.far.fa-money-bill-alt.mr-2
                                span Someone Sent Money To You
                            li.mt-3
                                i.fas.fa-microphone-alt.mr-2
                                span New Event Announcement Is Triggered

                    .not-footer.text-center
                        a(href='#').d-block.p-3.text-white View All Notifications
        
            i.fullscreen.fas.fa-expand-alt.mr-3