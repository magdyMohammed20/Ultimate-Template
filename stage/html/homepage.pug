html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{pageTitle}
        include ./pug/layout/styles
        include ./pug/layout/scripts
        
    body
        .page.home-page
            include pug/layout/sidebar
            .content
                include pug/layout/header
                        
                .content-container
                    h1 #{pageTitle}